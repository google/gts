{
  "name": "gts",
  "version": "0.4.0",
  "description": "Google TypeScript Style",
  "repository": "google/ts-style",
  "main": "build/src/index.js",
  "bin": {
    "gts": "build/src/cli.js"
  },
  "files": [
    ".clang-format",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "build/src",
    "build/types",
    "tsconfig-google.json",
    "tsconfig.json",
    "tslint.json"
  ],
  "scripts": {
    "build": "npm run compile",
    "clean": "rm -rf ./build/",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json",
    "compile": "tsc -p .",
    "format-check": "./bin/format-check.sh",
    "format": "clang-format -i -style='{Language: JavaScript, BasedOnStyle: Google, ColumnLimit: 80}' src/*.ts test/*.ts",
    "lint": "tslint -c tslint.json  --project . --type-check -t codeFrame",
    "lint-fix": "tslint -c tslint.json --project . --type-check -t codeFrame --fix",
    "prepare": "npm run compile",
    "test": "npm run compile && nyc ava build/test/test*.js",
    "posttest": "npm run lint && npm run format-check"
  },
  "engines": {
    "node": ">=4"
  },
  "keywords": [],
  "author": "Google Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^2.2.0",
    "clang-format": "^1.0.53",
    "inquirer": "^3.2.1",
    "meow": "^3.7.0",
    "pify": "^3.0.0",
    "rimraf": "^2.6.1",
    "tslint": "^5.5.0",
    "update-notifier": "^2.2.0",
    "write-file-atomic": "^2.1.0"
  },
  "devDependencies": {
    "@types/glob": "^5.0.30",
    "@types/inquirer": "0.0.35",
    "@types/make-dir": "^1.0.1",
    "@types/meow": "^3.6.2",
    "@types/ncp": "^2.0.0",
    "@types/node": "^8.0.17",
    "@types/pify": "3.0.0",
    "@types/rimraf": "2.0.2",
    "@types/tmp": "0.0.33",
    "@types/update-notifier": "^1.0.1",
    "ava": "^0.23.0",
    "codecov": "^3.0.0",
    "make-dir": "^1.0.0",
    "ncp": "^2.0.0",
    "nyc": "^11.2.1",
    "source-map-support": "^0.5.0",
    "tmp": "0.0.31",
    "typescript": "^2.4.1"
  },
  "peerDependencies": {
    "typescript": "^2.4.1"
  },
  "ava": {
    "require": [
      "source-map-support/register"
    ]
  }
}
