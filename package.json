{
  "name": "gts",
  "version": "1.0.0",
  "description": "Google TypeScript Style",
  "repository": "google/gts",
  "main": "build/src/index.js",
  "bin": {
    "gts": "build/src/cli.js"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "build/src",
    "build/types",
    "prettier.config.js",
    "tsconfig-google.json",
    "tsconfig.json",
    "tslint.json"
  ],
  "scripts": {
    "build": "npm run compile",
    "clean": "rimraf ./build/",
    "codecov": "c8 report --reporter=json && codecov -f coverage/*.json",
    "compile": "tsc -p .",
    "format-check": "prettier --list-different src/*.ts test/*.ts",
    "format": "prettier --write src/*.ts test/*.ts",
    "lint": "tslint -c tslint.json  --project . -t codeFrame",
    "lint-fix": "tslint -c tslint.json --project . -t codeFrame --fix",
    "prepare": "npm run compile",
    "test": "c8 mocha build/test",
    "pretest": "npm run compile",
    "posttest": "npm run lint && npm run format-check && npm run license-check",
    "license-check": "jsgl --local .",
    "check": "gts check",
    "fix": "gts fix"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [],
  "author": "Google Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^2.4.1",
    "diff": "^4.0.1",
    "inquirer": "^6.0.0",
    "meow": "^5.0.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "tslint": "^5.12.0",
    "update-notifier": "^3.0.0",
    "write-file-atomic": "^2.3.0"
  },
  "devDependencies": {
    "@npm/types": "^1.0.1",
    "@types/cross-spawn": "^6.0.0",
    "@types/diff": "^4.0.0",
    "@types/fs-extra": "^7.0.0",
    "@types/inquirer": "^6.0.0",
    "@types/meow": "^5.0.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.0.3",
    "@types/prettier": "^1.15.2",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.0.11",
    "@types/tmp": "^0.1.0",
    "@types/update-notifier": "^2.2.0",
    "c8": "^4.1.4",
    "codecov": "^3.0.1",
    "cross-spawn": "^6.0.5",
    "fs-extra": "^8.0.0",
    "gts": "^1.0.0",
    "inline-fixtures": "^1.0.0",
    "js-green-licenses": "^0.5.0",
    "mocha": "^6.0.0",
    "sinon": "^7.3.1",
    "source-map-support": "^0.5.5",
    "tmp": "0.1.0",
    "typescript": "~3.4.0"
  },
  "peerDependencies": {
    "typescript": "^3.0.0"
  }
}
