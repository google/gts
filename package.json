{
  "name": "gts",
  "version": "0.9.0",
  "description": "Google TypeScript Style",
  "repository": "google/ts-style",
  "main": "build/src/index.js",
  "bin": {
    "gts": "build/src/cli.js"
  },
  "files": [
    ".clang-format",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "build/src",
    "build/types",
    "tsconfig-google.json",
    "tsconfig.json",
    "tslint.json"
  ],
  "scripts": {
    "build": "npm run compile",
    "clean": "rimraf ./build/",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json",
    "compile": "tsc -p .",
    "format-check": "./bin/format-check.sh",
    "format": "clang-format -i -style='{Language: JavaScript, BasedOnStyle: Google, ColumnLimit: 80}' src/*.ts test/*.ts",
    "lint": "tslint -c tslint.json  --project . -t codeFrame",
    "lint-fix": "tslint -c tslint.json --project . -t codeFrame --fix",
    "prepare": "npm run compile",
    "test": "nyc ava build/test/test*.js",
    "pretest": "npm run compile",
    "posttest": "npm run lint && npm run format-check && npm run license-check",
    "license-check": "jsgl --local ."
  },
  "engines": {
    "node": ">=6"
  },
  "keywords": [],
  "author": "Google Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^2.4.1",
    "clang-format": "1.2.3",
    "diff": "^3.5.0",
    "entities": "^1.1.1",
    "inquirer": "^6.0.0",
    "meow": "^5.0.0",
    "pify": "^4.0.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "update-notifier": "^2.5.0",
    "write-file-atomic": "^2.3.0"
  },
  "devDependencies": {
    "@types/diff": "^3.5.1",
    "@types/entities": "^1.1.0",
    "@types/glob": "^7.0.0",
    "@types/inquirer": "^0.0.43",
    "@types/make-dir": "^1.0.3",
    "@types/meow": "^5.0.0",
    "@types/ncp": "^2.0.1",
    "@types/node": "^10.0.3",
    "@types/pify": "^3.0.2",
    "@types/rimraf": "^2.0.2",
    "@types/tmp": "^0.0.33",
    "@types/update-notifier": "^2.2.0",
    "ava": "^0.25.0",
    "codecov": "^3.0.1",
    "js-green-licenses": "^0.5.0",
    "make-dir": "^1.2.0",
    "ncp": "^2.0.0",
    "nyc": "^13.0.0",
    "source-map-support": "^0.5.5",
    "tmp": "0.0.33",
    "typescript": "~3.1.0"
  },
  "peerDependencies": {
    "typescript": "^2.7.1 || ^3.0.0"
  },
  "ava": {
    "require": [
      "source-map-support/register"
    ]
  }
}
