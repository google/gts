{
  "extends": "./tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true
  },
  "include": ["eslint.config.js", "eslint.ignores.js", "src/**/*.js", "src/**/*.ts", "test/**/*.ts"],
  "exclude": ["test/fixtures/**/*.*", "template/**/*.*"]
}
